{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es6",
    "outDir": "lib",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "importsNotUsedAsValues": "preserve",
    "newLine": "lf",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
